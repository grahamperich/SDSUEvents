    <div class="col-md-4 col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading text-center">Categories</div>
        <ul class="list-group">
          <% Category.all.each do |category| %>
            <li class="list-group-item"><%= category.name %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>