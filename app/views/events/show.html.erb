<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <p class="lead"><%= @event.title %></p>
      <hr>
      <%= image_tag @event.image.url(:large) rescue "No image" %>
      <p><i class="fa fa-clock-o"></i> Posted on <%= @event.created_at.strftime('%B %d, %Y at %l:%M %p') %></p>
      <p><i class="fa fa-clock-o"></i> by <%= @event.user.name %> <%= image_tag(current_user.avatar.url(:thumb)) %></p>
      <hr>
      <p><%= @event.body %></p>
      <hr>

      <div class="well">
        <h4>Leave a Comment:</h4>
        <%= form_for [@event, Comment.new] do |f| %>
        	<div class="form-group">
	        	<%= f.text_area :body, class: "form-control", rows: 3 %>
	        	<br>
	        	<%= f.submit "Submit", class: "btn btn-primary" %>
	        </div>
        <% end %>

      </div>
      <hr>

   
   	<% @comments.each do |comment| %>
	      <div class="media">
	        <a class="pull-left" href="#">
	          <%= image_tag(current_user.avatar.url(:thumb)) %>
	        </a>
	        <div class="media-body">
	          <h4 class="media-heading"> <%= comment.user.name %>
	            <small><%= comment.created_at.strftime('%B %d, %Y at %l:%M %p') %></small>
	          </h4>
	          <%= comment.body %>
	         
	        </div>
	      </div>
      <% end %>
    </div>
  </div>
</div>