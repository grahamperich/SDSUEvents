<script type="text/javascript">
$(document).ready(function() {
    $('#summernote').summernote();
  });

</script>

<div class="container">
	<div class="col-md-8 col-md-offset-2">
		<div class="well">
		<div class="form-area">
			<h3>Create an Event</h3>
			<%= simple_form_for @event, html: { multipart: true } do |f| %>
				<%= f.error_notification %>

				<div class="form-group">
					<%= f.label :image %>
					<%= f.file_field :image %>
				</div>

				<div class="form-group">
					<%= f.label :title, "Title of the event" %>
					<%= f.input :title, rows: 1, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= f.label :date %>
					<%= f.text_field :date, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= f.label :time, "Start Time" %>
					<%= f.text_field :time, class: "form-control" %>
					</div>
				

					<%#= f.label :body, "Include all the details about your event here." %> 

				<div class="form-group">

					<%= f.input :body, class:'summernote' %>
					<%= f.input :body, class: 'summernote', :data => {:provider => 'summernote'} %>
					
					
				</div>

				<div class="form-group">
					<%= f.label :category_id %>
					<%= f.select(:category_id, Category.all.map{ |f| [f.name, f.id] }, {}, { class: "form-control", id: "select" }) %>
				</div>
				<div class="form-group">
					<%= f.submit class: "btn btn-primary" %>
				</div>
			<% end %>
		</div>
	</div>
  </div>
</div> <!-- .container -->


